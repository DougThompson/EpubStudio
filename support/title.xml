<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
	<head>
		<title>Title Page</title>
		<link rel="stylesheet" href="css/main.css" type="text/css" />
		<meta http-equiv="Content-Type" content="application/xhtml+xml; charset=utf-8" />
	</head>
	<body>
		% if book.coverImage <> '':
		<div style="text-align: center; page-break-after: always;">
			<img src="images/${book.coverImage}" alt="Cover" style="height: 100%;" />
		</div>
		% else:
		<p>&nbsp;</p>
		% endif
		<p>&nbsp;</p>
		<p>&nbsp;</p>
		<p>&nbsp;</p>
		<p>&nbsp;</p>
		<p>&nbsp;</p>
		<div class="body">
			<div style="text-align: center;"><h2>${book.title}</h2></div>
			<div style="text-align: center;"><h3>${book.author}</h3></div>
		</div>
		<p>&nbsp;</p>
		<p>&nbsp;</p>
		<p>&nbsp;</p>
		<p>&nbsp;</p>
		<div class="infos">
			<b>Published:</b> ${book.origPublishDate}<br />
			<b>Type(s):</b> ${book.subject}<br />
		</div>
	</body>
</html>

